extends lay

block content
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css")

    table.ui.compact.celled.definition.table
        thead
            tr
                th
                th Repo Name
                th Issue Title
                th Issue Body
        tbody
            each issue in issues
                -var s = JSON.stringify(issue);
                    -console.log("s",s);
                tr
                    td.collapsing
                        a(href=`/posttask/${s}`)
                            button.ui.primary.button
                                | Save
                    td=issue.repoName
                    td=issue.issueTitle
                    td=issue.issueBody
