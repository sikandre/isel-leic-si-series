extends layout

block layout-content
    link(rel="stylesheet" href="../stylesheets/gitstyle.css")
    h1 #{email}
    h1 Welcome
    h2
    img(src='https://github.githubassets.com/images/modules/logos_page/GitHub-Logo.png' alt='github' style='display: block; margin-left: auto; margin-right: auto')
    .row
        .col
            br
            br
            a(href=`/logingit/${email}`)
                button(style='font-size:24px' type='submit')
                    i.fa.fa-github(aria-hidden='true') Get repository from Github
